extend type Menu {
  links(root: String = null, activeTrailIds: [String] = null, minDepth: Int = null, maxDepth: Int = null): [MenuLinkTreeElement!]!
}

extend type Query {
  """
  Load a menu by its name. The menu is loaded automatically in the
  current language.
  """
  menuByName(
    """
    The name of the menu.
    """
    name: MenuName!
  ): Menu
}
